@using Marrubium.AdminWeb.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductRazorModel

@{
    var formAspAction = "";
    var formName = "Информация о заказе";
    string? disabledAttribure = null;
    string? hiddenAttribure = null;
    var formActionName = "";

    switch (Model.ViewType)
    {
        case SD.ViewType.Create:
            formAspAction = "ProductCreate";
            formName = "Create new product";
            formActionName = "Создать";
            break;
        default:
            disabledAttribure = "disabled";
            hiddenAttribure = "hidden";
            break;
    }
}


<form asp-action="@formAspAction">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">@formName</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Product.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="InternalProductTypes" class="control-label pt-2" style="font-size:20px;">ProductTypes</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="InternalProductTypes" class="form-control" placeholder="comma-separated data entry" />
                <span asp-validation-for="InternalProductTypes" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="InternalFunctions" class="control-label pt-2" style="font-size:20px;">Functions</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="InternalFunctions" class="form-control" placeholder="comma-separated data entry"/>
                <span asp-validation-for="InternalFunctions" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="InternalSkinTypes" class="control-label pt-2" style="font-size:20px;">SkinTypes</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="InternalSkinTypes" class="form-control" placeholder="comma-separated data entry"/>
                <span asp-validation-for="InternalSkinTypes" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
        <partial name="_ValidationScriptsPartial"/>
}