@model IEnumerable<Marrubium.Services.ProductAPI.HttpModels.ProductDto>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1>Products List</h1>
		</div>
		<div class="col text-end pt-1">
			<a sp-action="ProductIndex" asp-route-viewType="@SD.ViewType.Create" class="btn btn-outline-primary">
				<i class="fas fa-plus"></i> Create new product
			</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
                	Image
                </th>
				<th>
					Name
				</th>
				<th>
					Product Types
				</th>
				<th>
					Functions
				</th>
				<th>
                    Skin types
                </th>
				<th>
					Price
				</th>
				<th>
                	Actions
                </th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<div class="product-img">
                           <img src="@item.ImageUrl" alt="IMAGE NOT FOUND!">
                        </div>
					</td>
					<td>
						<div class="product-desc">
							<div>@item.Name</div>
						</div>
					</td>
					<td>
						<div class="product-desc">
							<div>@string.Join(", ", item.ProductTypes).ToLower()</div>
						</div>
					</td>
					<td>
						<div class="product-desc">
						<div>@string.Join(", ", item.Functions).ToLower()</div>
						</div>
					</td>
					<td>
						<div class="product-desc">
							<div>@string.Join(", ", item.SkinTypes).ToLower()</div>
						</div>
					</td>
					<td>
						<div class="product-desc">
							<div>@((item.Price).ToString("c"))</div>
						</div>
					</td>
					<td>
						<div class="product-desc">
							<a asp-action="ProductIndex" class="btn btn-info" asp-route-viewType="@SD.ViewType.Info" asp-route-orderId="@item.ProductId">
								<i class="fas fa-eye"></i>
							</a>
							<a asp-action="ProductIndex" class="btn btn-success" asp-route-viewType="@SD.ViewType.Update" asp-route-orderId="@item.ProductId">
								<i class="fas fa-edit"></i>
							</a>
							<a asp-action="ProductIndex" class="btn btn-danger" asp-route-viewType="@SD.ViewType.Delete" asp-route-orderId="@item.ProductId">
								<i class="fas fa-trash"></i>
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
